	number = {n/a},
	urldate = {2024-04-22},
	journal = {Ecological Applications},
	author = {Howerton, Emily and Langkilde, Tracy and Shea, Katriona},
	year = {2024},
	keywords = {disturbance, competition model, optimal management, invasional interference, native–invader interactions, red imported fire ant (Solenopsis Invicta)},
	pages = {e2974},
}

@article{jung_potential_2024,
	title = {Potential impact of annual vaccination with reformulated {COVID}-19 vaccines: {Lessons} from the {US} {COVID}-19 scenario modeling hub},
